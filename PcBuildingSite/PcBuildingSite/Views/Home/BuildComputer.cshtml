@model PcBuildingSite.Models.Computer

@{
    ViewData["Title"] = "BuildComputer";
}
<h1>
    <button type="button" onclick="window.location.href = 'BuildComputer';">Построй</button>
    <button type="button" onclick="window.location.href = 'CalculateFPS';">Изчисли FPS</button>
    <button type="button" onclick="window.location.href = 'UserPanel';">$username</button>
</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="BuildComputer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="dCase" class="control-label"></label>
                <input asp-for="dCase" class="form-control" />
                <span asp-validation-for="dCase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dCPU" class="control-label"></label>
                <input asp-for="dCPU" class="form-control" />
                <span asp-validation-for="dCPU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dGPU" class="control-label"></label>
                <input asp-for="dGPU" class="form-control"/>
                <span asp-validation-for="dGPU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dRAM" class="control-label"></label>
                <input asp-for="dRAM" class="form-control" />
                <span asp-validation-for="dRAM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dStorage" class="control-label"></label>
                <input asp-for="dStorage" class="form-control" />
                <span asp-validation-for="dStorage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dMotherboard" class="control-label"></label>
                <input asp-for="dMotherboard" class="form-control" />
                <span asp-validation-for="dMotherboard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dPSU" class="control-label"></label>
                <input asp-for="dPSU" class="form-control" />
                <span asp-validation-for="dPSU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" /> @*TODO: Предава информацията към User's computers*@
                <button onclick="">Отпечатай спецификации</button> @*TODO: Записва всичко в текстов файл на десктопа*@
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
